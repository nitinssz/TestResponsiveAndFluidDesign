---
import Hero from '../components/Hero.astro';
import '../styles/fluid-design-system.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Responsive & Fluid Design - Astro</title>
    <meta name="description" content="A beautiful responsive and fluid design website built with Astro" />
    <style>
      /* Global reset and base styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        /* 320px-425px: 14px to 16px */
        font-size: clamp(14px, 12.8px + 0.375vw, 16px);
        scroll-behavior: smooth;
      }
      
      /* 425px-768px: STATIC at 16px */
      @media (min-width: 425px) and (max-width: 767px) {
        html {
          font-size: 16px;
        }
      }
      
      /* 768px-1024px: 16px-18px fluid */
      @media (min-width: 768px) and (max-width: 1023px) {
        html {
          font-size: clamp(16px, 14.75px + 0.163vw, 18px);
        }
      }
      
      /* 1024px-1280px: STATIC at 18px */
      @media (min-width: 1024px) and (max-width: 1279px) {
        html {
          font-size: 18px;
        }
      }
      
      /* 1280px-1440px: 18px-20px fluid */
      @media (min-width: 1280px) and (max-width: 1439px) {
        html {
          font-size: clamp(18px, 17.25px + 0.059vw, 20px);
        }
      }
      
      /* 1440px+: STATIC at 20px */
      @media (min-width: 1440px) {
        html {
          font-size: 20px;
        }
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
        overflow-x: hidden;
      }
    </style>
  </head>
  <body>
    <Hero />
  </body>
</html>